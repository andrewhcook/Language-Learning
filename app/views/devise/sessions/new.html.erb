<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">

      <h2 class="mb-4">Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'card' }) do |f| %>
        <div class="card-body">
          <%= f.input :email, required: false, autofocus: true, input_html: { autocomplete: "email" }, class: 'form-control' %>
          <%= f.input :password, required: false, input_html: { autocomplete: "current-password" }, class: 'form-control' %>
          <%= f.input :remember_me, as: :boolean, if: devise_mapping.rememberable?, label: 'Remember me' %>
        </div>

        <div class="card-footer text-right">
          <%= f.button :submit, "Log in", class: 'btn btn-primary' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>

    </div>
  </div>
</div>
