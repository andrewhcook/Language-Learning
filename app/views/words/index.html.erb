<div>
  <div>
    <h1>
      List of all words
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new word
    </h2>

    <form action="/insert_word" method="post">
      <div>
        <label for="language_id_box">
          Language
        </label>

        <input type="text" id="language_id_box" name="query_language_id">
      </div>

      <div>
        <label for="word_box">
          Word
        </label>

        <input type="text" id="word_box" name="query_word">
      </div>

      <button>
        Create word
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Language
        </th>

        <th>
          Word
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_words.each do |a_word| %>
      <tr>
        <td>
          <%= a_word.id %>
        </td>

        <td>
          <%= a_word.language_id %>
        </td>

        <td>
          <%= a_word.word %>
        </td>

        <td>
          <%= time_ago_in_words(a_word.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_word.updated_at) %> ago
        </td>

        <td>
          <a href="/words/<%= a_word.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
